<div class="top-border"><%= image_tag('border.png', :size =>'1200x5') %></div>
<div class="top-img"><%= image_tag('concept3.jpg', :size =>'1200x150') %></div>

<div class="link_bar">
  <%= link_to "top", root_path %>
  <span>>></span>
  <%= link_to "ペット一覧", enduser_pets_path %>
   <span>>></span>
  <%= link_to "ペット詳細", enduser_pet_path(@pet) %>
</div>

<!--ペットの詳細ページ-->
<div class="enduser-pet-show">
  <h3>『<%= @pet.name%>』の詳細</h3>
    <div class="row">
      <div class="top-border"><%= image_tag('border.png', :size =>'1200x5') %></div>
      <div class="col-xl-6 col-xl-offset-1 col-md-6 col-md-offset-1">
        <%= attachment_image_tag @pet, :animal_image, fallback: 'no-image.jpg', size: '600x400', class: "enduser-pet--show-img" %>
      </div>
      <div class="col-xl-2  col-md-2 enduser">
        <ul>
          <li>ジャンル：</li>
          <li>名前：</li>
          <li>性別：</li>
          <li>年齢</li>
          <li>種類：</li>
          <li>サイズ：</li>
          <li>都道府県</li>
          <li>去勢・避妊</li>
          <li>単身者応募：</li>
          <li>高齢者応募：</li>
          <li>備考:</li>
          <li>現在の募集状況：</li>
        </ul>
      </div>
      <div class="col-xl-2 col-md-2">
        <ul>
          <li><%= @pet.genre.name %></li>
          <li><%= @pet.name %></li>
          <li><%= @pet.sex_i18n %></li>
          <li><%= @pet.age_i18n%></li>
          <li><%= @pet.kind %></li>
          <li><%= @pet.size_i18n %></li>
          <li><%= @pet.prefectures_i18n %></li>
          <li><%= @pet.castration_status_i18n %></li>
          <li><%= @pet.single_status_i18n %></li>
          <li><%= @pet.older_status_i18n %></li>
          <li><%= @pet.detail %></li>
          <li><%= @pet.pet_status_i18n %></li>
        </ul>
      </div>
      <div class="col-xl-1 col-md-2 enduser-pet-show-reservation-btn">
        <%= link_to "予約する", enduser_reservations_path, class: "btn btn-outline-dark enduser-pet-show-reservation-btn-dark" %>
      </div>

    </div>
</div>
