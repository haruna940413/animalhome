<!DOCTYPE html>
<html style="margin-right: auto;margin-left: auto;">
  <head>
    <title>animalhome</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

　　
    <!--ファビコン-->
    <%= favicon_link_tag('favicon.ico') %>
    <script src="https://kit.fontawesome.com/6614bc2837.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body id="<%= controller.controller_name %>-<%= controller.action_name %>" data-turbolinks="false" style="margin-top: 0;">
    <div class="container-fluid">
      <%= render 'layouts/flash_messages' %>
      <%= render 'layouts/e-header' %>
      <%= yield %>
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>