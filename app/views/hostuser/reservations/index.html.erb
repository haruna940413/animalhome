<div class="top-border"><%= image_tag('border.png', :size =>'1100x5') %></div>
<div class="top-img"><%= image_tag('concept2.png', :size =>'1100x150') %></div>
<div class="link_bar">
  <%= link_to "top", hostuser_homes_top_path %>
  <span>>></span>
  <%= link_to "予約カレンダー(管理者)",hostuser_reservations_path %>
</div>
<div id="calendar"></div>


<!--js-->
<script type="text/javascript">
// フルカレンダー
  $(function () {
    // 画面遷移を検知
    $(document).on('turbolinks:load', function () {
      if ($('#calendar').length) {

        function Calendar() {
          return $('#calendar').fullCalendar({
          });
        }
        function clearCalendar() {
          $('#calendar').html('');
        }

        $(document).on('turbolinks:load', function () {
          Calendar();
        });
        $(document).on('turbolinks:before-cache', clearCalendar);

        //events: '/events.json', 以下に追加
        $('#calendar').fullCalendar({
            events: [
              <% @reservations.each do |reservation|%>
              {
                id: '<%= reservation.id %>',
                title: '×',
                start: '<%= reservation.start_date.strftime("%Y/%m/%d %H:%M") %>'
              },
              <% end %>
            ],

        //カレンダー上部を年月で表示させる
        titleFormat: 'YYYY年 M月',
        //曜日を日本語表示
        dayNamesShort: ['日', '月', '火', '水', '木', '金', '土'],
        //ボタンのレイアウト
        header: {
            left: '',
            center: 'title',
            right: 'today prev,next'
        },
      //終了時刻がないイベントの表示間隔
      defaultTimedEventDuration: '03:00:00',
      buttonText: {
          prev: '前',
          next: '次',
          prevYear: '前年',
          nextYear: '翌年',
          today: '今日',
          month: '月',
          week: '週',
          day: '日'
      },
      // Drag & Drop & Resize
      editable: true,
      //イベントの時間表示を２４時間に(am,pmを表示しない)
      timeFormat: "HH:mm",
      minTime: 0,
      maxTime: 24,
      //イベントの色を変える
      eventColor: '#87cefa',
      //イベントの文字色を変える
      eventTextColor: '#000000',
      eventRender: function(event, element) {
          element.css("font-size", "0.8em");
          element.css("padding", "5px");
      }
          });
        }
    });
　});
</script>